# pnpm設定
store-dir=/home/node/.pnpm-store
cache-dir=/home/node/.pnpm-store
state-dir=/home/node/.pnpm-store

# 権限問題を回避するための設定
prefer-offline=false
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# プラットフォーム固有の依存関係の処理
optional=true
peer=false

# ロックファイルの設定
lockfile=true
auto-install-peers=true

# セキュリティ設定
audit-level=moderate
fund=false
